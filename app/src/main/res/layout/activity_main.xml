<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.xiaxiao.xxflowlayout.MainActivity">

    <EditText
        android:id="@+id/et"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/et"
        android:layout_alignParentTop="true"
        >
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="+小"
            android:textSize="12sp"
            android:onClick="addView"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+中"
            android:textSize="12sp"
            android:onClick="addMiddleView"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+大"
            android:textSize="12sp"
            android:onClick="addBigView"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="+行间距"
            android:onClick="changeLine"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="+字间距"
            android:onClick="wordSpace"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/et"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="垂直居中"
            android:textSize="12sp"
            android:onClick="center"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="垂直顶部"
            android:textSize="12sp"
            android:onClick="top"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="垂直底部对齐"
            android:textSize="12sp"
            android:onClick="bottom"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="水平平铺"
            android:textSize="12sp"
            android:onClick="uniform"
            />
    </LinearLayout>
    <ScrollView
        android:id="@+id/sc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll"
        android:layout_above="@id/bottom_ll"
        >


    <com.example.xiaxiao.xxflowlayout.XXFlowLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e4e4e4"

        >

    </com.example.xiaxiao.xxflowlayout.XXFlowLayout>
    </ScrollView>

</RelativeLayout>
